<Window x:Class="poedraft.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:poedraft"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="1" Margin="0,50,0,0" Stroke="Black" VerticalAlignment="Top" Width="622"/>
        <Image Margin="268,6,471,378" Source="/coooking logo.jpeg" Stretch="Fill"/>
        <TextBlock Text="RecipeBook" FontWeight="Bold" Foreground="#FF6347" FontFamily="Segoe Print" Margin="329,11,329,383" FontSize="22"/>
        <ListBox x:Name="lstDisplay" HorizontalAlignment="Left" Height="368" Margin="89,56,0,0" VerticalAlignment="Top" Width="277"/>
        <ComboBox x:Name="cmbScale" HorizontalAlignment="Left" Height="28" Margin="471,127,0,0" VerticalAlignment="Top" Width="212" SelectionChanged="cmbScale_SelectionChanged">
            <ComboBoxItem Content="Half"/>
            <ComboBoxItem Content="Double"/>
            <ComboBoxItem Content="Triple"/>
        </ComboBox>
                  
        <Label Content="Scale Recipe:" HorizontalAlignment="Left" Height="27" Margin="471,95,0,0" VerticalAlignment="Top" Width="171"/>
        <Button x:Name="btnReset" Content="Rest" HorizontalAlignment="Left" Height="40" Margin="494,217,0,0" VerticalAlignment="Top" Width="166" Click="btnReset_Click" Background="Tomato"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Height="39" Margin="494,297,0,0" VerticalAlignment="Top" Width="166" Click="btnClear_Click" Background="Tomato"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Height="39" Margin="494,371,0,0" VerticalAlignment="Top" Width="166" Click="btnSave_Click" Background="Tomato"/>

    </Grid>
</Window>
