<Window x:Class="poedraft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:poedraft"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="#f5f5f5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/coooking logo.jpeg" Width="184" Height="130" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="RecipeBook" FontSize="50" FontWeight="Bold" Foreground="#FF6347" Margin="0,0,0,10" HorizontalAlignment="Center" FontFamily="Segoe Print"/>
            <Separator Background="#FF6347" Height="2" Width="200"/>
            <Button x:Name="btnCreateRecipe" Content="Create New Recipe" Click="CreateNewRecipe_Click" Width="150" Height="40" Margin="10" 
                    Background="#FF6347" Foreground="White" BorderBrush="#FF6347" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Padding="5" BorderThickness="2" FontFamily="Segoe UI Semibold" />
        </StackPanel>


    </Grid>
</Window>
